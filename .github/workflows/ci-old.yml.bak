name: Unified CI

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main, develop]

jobs:
  # JOB 1: Code Quality, Build and Test (.NET)
  dotnet-analysis:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      checks: write
      pull-requests: write
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup .NET
        uses: actions/setup-dotnet@v4
        with:
          dotnet-version: "8.0.x"

      - name: Install Sonar Scanner
        run: dotnet tool install --global dotnet-sonarscanner

      - name: Begin Sonar Analysis
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}
        run: |
          dotnet-sonarscanner begin \
            /k:"RahulSharma2309_Electronic-Paradise" \
            /o:"rahulsharma2309" \
            /d:sonar.token="$SONAR_TOKEN" \
            /d:sonar.host.url="https://sonarcloud.io" \
            /d:sonar.cs.opencover.reportsPaths="**/coverage.opencover.xml" \
            /d:sonar.exclusions="**/bin/**,**/obj/**,**/test/**,.github/**"

      - name: Build All Services
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          dotnet build gateway/Gateway.sln -c Release
          dotnet build services/auth-service/AuthService.sln -c Release
          dotnet build services/order-service/OrderService.sln -c Release
          dotnet build services/payment-service/PaymentService.sln -c Release
          dotnet build services/product-service/ProductService.sln -c Release
          dotnet build services/user-service/UserService.sln -c Release

      - name: Test & Collect Coverage
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          dotnet test gateway/Gateway.sln -c Release --logger trx --results-directory ./TestResults/gateway /p:CollectCoverage=true /p:CoverletOutputFormat=opencover
          dotnet test services/auth-service/AuthService.sln -c Release --logger trx --results-directory ./TestResults/auth /p:CollectCoverage=true /p:CoverletOutputFormat=opencover
          dotnet test services/order-service/OrderService.sln -c Release --logger trx --results-directory ./TestResults/order /p:CollectCoverage=true /p:CoverletOutputFormat=opencover
          dotnet test services/payment-service/PaymentService.sln -c Release --logger trx --results-directory ./TestResults/payment /p:CollectCoverage=true /p:CoverletOutputFormat=opencover
          dotnet test services/product-service/ProductService.sln -c Release --logger trx --results-directory ./TestResults/product /p:CollectCoverage=true /p:CoverletOutputFormat=opencover
          dotnet test services/user-service/UserService.sln -c Release --logger trx --results-directory ./TestResults/user /p:CollectCoverage=true /p:CoverletOutputFormat=opencover

      - name: End Sonar Analysis
        env:
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}
        run: dotnet-sonarscanner end /d:sonar.token="$SONAR_TOKEN"

      - name: Publish Test Report
        uses: dorny/test-reporter@v1 # SHA pinning causes GitHub API issues
        if: always()
        with:
          name: .NET Integration Tests
          path: "**/TestResults/**/*.trx"
          reporter: dotnet-trx

  # JOB 2: Frontend Build
  frontend-build:
    runs-on: ubuntu-latest
    permissions:
      contents: read
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: "npm"
          cache-dependency-path: frontend/package-lock.json

      - name: Install dependencies
        run: |
          cd frontend
          npm ci --ignore-scripts

      - name: Build Frontend
        run: |
          cd frontend
          npm run build --if-present

  # JOB 3: Docker Build & Push
  docker-build:
    runs-on: ubuntu-latest
    needs: [dotnet-analysis, frontend-build]
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Calculate next version
        id: version
        run: |
          chmod +x ./scripts/get-next-version.sh
          BRANCH_NAME="${GITHUB_HEAD_REF:-${GITHUB_REF#refs/heads/}}"
          VERSION=$(./scripts/get-next-version.sh "$BRANCH_NAME")
          echo "version=$VERSION" >> $GITHUB_OUTPUT
          echo "branch=$BRANCH_NAME" >> $GITHUB_OUTPUT
          echo "ðŸ“Š Calculated version: $VERSION for branch: $BRANCH_NAME"

      - name: Get Git SHA
        id: git
        run: |
          SHORT_SHA=$(git rev-parse --short HEAD)
          echo "sha=$SHORT_SHA" >> $GITHUB_OUTPUT
          echo "ðŸ”– Git SHA: $SHORT_SHA"

      - name: Set image tags
        id: tags
        run: |
          # Convert repository owner to lowercase for Docker registry
          REPO_OWNER=$(echo "${{ github.repository_owner }}" | tr '[:upper:]' '[:lower:]')
          echo "repo_owner=$REPO_OWNER" >> $GITHUB_OUTPUT

          REGISTRY="ghcr.io/$REPO_OWNER"
          VERSION="${{ steps.version.outputs.version }}"
          SHA="${{ steps.git.outputs.sha }}"

          if [ "${{ github.ref }}" == "refs/heads/main" ]; then
            echo "mode=production" >> $GITHUB_OUTPUT
            echo "ðŸš€ Mode: Production (main branch)"
            echo "   Tags: v$VERSION, v$VERSION-$SHA, latest"
          else
            echo "mode=alpha" >> $GITHUB_OUTPUT
            echo "ðŸ§ª Mode: Alpha (feature/PR branch)"
            echo "   Tag: alpha-$VERSION-$SHA"
          fi

      - name: Build and push Auth Service
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./services/auth-service/src/Dockerfile
          push: true
          tags: |
            ghcr.io/${{ steps.tags.outputs.repo_owner }}/electronic-paradise-auth:${{ steps.tags.outputs.mode == 'production' && format('v{0}', steps.version.outputs.version) || format('alpha-{0}-{1}', steps.version.outputs.version, steps.git.outputs.sha) }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-auth:v{1}-{2}', steps.tags.outputs.repo_owner, steps.version.outputs.version, steps.git.outputs.sha) || '' }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-auth:latest', steps.tags.outputs.repo_owner) || '' }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Build and push User Service
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./services/user-service/src/Dockerfile
          push: true
          tags: |
            ghcr.io/${{ steps.tags.outputs.repo_owner }}/electronic-paradise-user:${{ steps.tags.outputs.mode == 'production' && format('v{0}', steps.version.outputs.version) || format('alpha-{0}-{1}', steps.version.outputs.version, steps.git.outputs.sha) }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-user:v{1}-{2}', steps.tags.outputs.repo_owner, steps.version.outputs.version, steps.git.outputs.sha) || '' }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-user:latest', steps.tags.outputs.repo_owner) || '' }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Build and push Product Service
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./services/product-service/src/Dockerfile
          push: true
          tags: |
            ghcr.io/${{ steps.tags.outputs.repo_owner }}/electronic-paradise-product:${{ steps.tags.outputs.mode == 'production' && format('v{0}', steps.version.outputs.version) || format('alpha-{0}-{1}', steps.version.outputs.version, steps.git.outputs.sha) }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-product:v{1}-{2}', steps.tags.outputs.repo_owner, steps.version.outputs.version, steps.git.outputs.sha) || '' }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-product:latest', steps.tags.outputs.repo_owner) || '' }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Build and push Order Service
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./services/order-service/src/Dockerfile
          push: true
          tags: |
            ghcr.io/${{ steps.tags.outputs.repo_owner }}/electronic-paradise-order:${{ steps.tags.outputs.mode == 'production' && format('v{0}', steps.version.outputs.version) || format('alpha-{0}-{1}', steps.version.outputs.version, steps.git.outputs.sha) }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-order:v{1}-{2}', steps.tags.outputs.repo_owner, steps.version.outputs.version, steps.git.outputs.sha) || '' }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-order:latest', steps.tags.outputs.repo_owner) || '' }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Build and push Payment Service
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./services/payment-service/src/Dockerfile
          push: true
          tags: |
            ghcr.io/${{ steps.tags.outputs.repo_owner }}/electronic-paradise-payment:${{ steps.tags.outputs.mode == 'production' && format('v{0}', steps.version.outputs.version) || format('alpha-{0}-{1}', steps.version.outputs.version, steps.git.outputs.sha) }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-payment:v{1}-{2}', steps.tags.outputs.repo_owner, steps.version.outputs.version, steps.git.outputs.sha) || '' }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-payment:latest', steps.tags.outputs.repo_owner) || '' }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Build and push Gateway
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./gateway/src/Dockerfile
          push: true
          tags: |
            ghcr.io/${{ steps.tags.outputs.repo_owner }}/electronic-paradise-gateway:${{ steps.tags.outputs.mode == 'production' && format('v{0}', steps.version.outputs.version) || format('alpha-{0}-{1}', steps.version.outputs.version, steps.git.outputs.sha) }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-gateway:v{1}-{2}', steps.tags.outputs.repo_owner, steps.version.outputs.version, steps.git.outputs.sha) || '' }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-gateway:latest', steps.tags.outputs.repo_owner) || '' }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Build and push Frontend
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./frontend/Dockerfile
          push: true
          tags: |
            ghcr.io/${{ steps.tags.outputs.repo_owner }}/electronic-paradise-frontend:${{ steps.tags.outputs.mode == 'production' && format('v{0}', steps.version.outputs.version) || format('alpha-{0}-{1}', steps.version.outputs.version, steps.git.outputs.sha) }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-frontend:v{1}-{2}', steps.tags.outputs.repo_owner, steps.version.outputs.version, steps.git.outputs.sha) || '' }}
            ${{ steps.tags.outputs.mode == 'production' && format('ghcr.io/{0}/electronic-paradise-frontend:latest', steps.tags.outputs.repo_owner) || '' }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Summary
        run: |
          echo "### ðŸ³ Docker Build Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "**Mode:** ${{ steps.tags.outputs.mode }}" >> $GITHUB_STEP_SUMMARY
          echo "**Version:** ${{ steps.version.outputs.version }}" >> $GITHUB_STEP_SUMMARY
          echo "**Git SHA:** ${{ steps.git.outputs.sha }}" >> $GITHUB_STEP_SUMMARY
          echo "**Branch:** ${{ steps.version.outputs.branch }}" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "**Images Built & Pushed:**" >> $GITHUB_STEP_SUMMARY
          echo "- âœ… Auth Service" >> $GITHUB_STEP_SUMMARY
          echo "- âœ… User Service" >> $GITHUB_STEP_SUMMARY
          echo "- âœ… Product Service" >> $GITHUB_STEP_SUMMARY
          echo "- âœ… Order Service" >> $GITHUB_STEP_SUMMARY
          echo "- âœ… Payment Service" >> $GITHUB_STEP_SUMMARY
          echo "- âœ… Gateway" >> $GITHUB_STEP_SUMMARY
          echo "- âœ… Frontend" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "**Registry:** ghcr.io/${{ steps.tags.outputs.repo_owner }}" >> $GITHUB_STEP_SUMMARY
