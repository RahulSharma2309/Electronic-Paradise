{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Build Product Service",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "build",
        "product-service"
      ],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Rebuild Product Service",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "build",
        "--no-cache",
        "product-service"
      ],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Start Product Service",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "up",
        "-d"
      ],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Stop Product Service",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "down"
      ],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: View Product Service Logs",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "logs",
        "-f",
        "product-service"
      ],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: View All Logs",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "logs",
        "-f"
      ],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}








